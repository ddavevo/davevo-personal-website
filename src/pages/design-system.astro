---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Design Tokens</title>
    <link rel="icon" type="image/x-icon" href="https://media.dave-vo.com/file/dvfolio/general/davevo_favicon.png">
    <meta
      name="description" content="Design token reference for colors, typography, and UI primitives used across the system."/>
</head>

<BaseLayout>
    <main>
      <!--Table of Contents-->
        <nav class="design-system-sidebar">
            <p class="subtitle">Foundations</p>
            <ul>
                <li>Colors</li>
                <li>Design Tokens</li>
            </ul>
        </nav>

        <div class="main-container">
              <h2> Colors </h2>
              <p>
                Primitive color palettes used across the design system.
              </p>
              
              <h4>Grayscale</h4>
              <section class="color-scale">
                  <div style="background-color: var(--gray-100);"><p style="color: var(--gray-1000);">100</p></div>
                  <div style="background-color: var(--gray-200);"><p style="color: var(--gray-1000);">200</p></div>
                  <div style="background-color: var(--gray-300);"><p style="color: var(--gray-1000);">300</p></div>
                  <div style="background-color: var(--gray-400);"><p style="color: var(--gray-100);">400</p></div>
                  <div style="background-color: var(--gray-500);"><p style="color: var(--gray-100);">500</p></div>
                  <div style="background-color: var(--gray-600);"><p style="color: var(--gray-100);">600</p></div>
                  <div style="background-color: var(--gray-700);"><p style="color: var(--gray-100);">700</p></div>
                  <div style="background-color: var(--gray-800);"><p style="color: var(--gray-100);">800</p></div>
                  <div style="background-color: var(--gray-900);"><p style="color: var(--gray-100);">900</p></div>
                  <div style="background-color: var(--gray-1000);"><p style="color: var(--gray-100);">1000</p></div>
              </section>

              <h4>Background/Neutrals</h4>
              <section class="color-scale">
                  <div style="background-color: var(--brown-100);"><p style="color: var(--gray-1000);">100</p></div>
                  <div style="background-color: var(--brown-200);"><p style="color: var(--gray-1000);">200</p></div>
                  <div style="background-color: var(--brown-250);"><p style="color: var(--gray-1000);">250</p></div>
                  <div style="background-color: var(--brown-300);"><p style="color: var(--gray-1000);">300</p></div>
                  <div style="background-color: var(--brown-400);"><p style="color: var(--gray-100);">400</p></div>
                  <div style="background-color: var(--brown-500);"><p style="color: var(--gray-100);">500</p></div>
                  <div style="background-color: var(--brown-600);"><p style="color: var(--gray-100);">600</p></div>
                  <div style="background-color: var(--brown-700);"><p style="color: var(--gray-100);">700</p></div>
                  <div style="background-color: var(--brown-800);"><p style="color: var(--gray-100);">800</p></div>
                  <div style="background-color: var(--brown-900);"><p style="color: var(--gray-100);">900</p></div>
              </section>

              <h4>Accent</h4>
              <section class="color-scale">
                  <div style="background-color: var(--teal-100);"><p style="color: var(--gray-1000);">100</p></div>
                  <div style="background-color: var(--teal-200);"><p style="color: var(--gray-1000);">200</p></div>
                  <div style="background-color: var(--teal-300);"><p style="color: var(--gray-1000);">300</p></div>
                  <div style="background-color: var(--teal-default);"><p style="color: var(--gray-100);">400</p></div>
                  <div style="background-color: var(--teal-500);"><p style="color: var(--gray-100);">500</p></div>
                  <div style="background-color: var(--teal-600);"><p style="color: var(--gray-100);">600</p></div>
                  <div style="background-color: var(--teal-700);"><p style="color: var(--gray-100);">700</p></div>
                  <div style="background-color: var(--teal-800);"><p style="color: var(--gray-100);">800</p></div>
                  <div style="background-color: var(--teal-900);"><p style="color: var(--gray-100);">900</p></div>
              </section>

              <h4>Impact/Gain Point</h4>
              <section class="color-scale">
                  <div style="background-color: var(--green-100);"><p style="color: var(--gray-1000);">100</p></div>
                  <div style="background-color: var(--green-200);"><p style="color: var(--gray-1000);">200</p></div>
                  <div style="background-color: var(--green-300);"><p style="color: var(--gray-1000);">300</p></div>
                  <div style="background-color: var(--green-400);"><p style="color: var(--gray-100);">400</p></div>
                  <div style="background-color: var(--green-default);"><p style="color: var(--gray-100);">500</p></div>
                  <div style="background-color: var(--green-600);"><p style="color: var(--gray-100);">600</p></div>
                  <div style="background-color: var(--green-700);"><p style="color: var(--gray-100);">700</p></div>
                  <div style="background-color: var(--green-800);"><p style="color: var(--gray-100);">800</p></div>
                  <div style="background-color: var(--green-900);"><p style="color: var(--gray-100);">900</p></div>
              </section>

              <h4>Error/Pain Point</h4>
              <section class="color-scale">
                  <div style="background-color: var(--red-100);"><p style="color: var(--gray-1000);">100</p></div>
                  <div style="background-color: var(--red-200);"><p style="color: var(--gray-1000);">200</p></div>
                  <div style="background-color: var(--red-300);"><p style="color: var(--gray-1000);">300</p></div>
                  <div style="background-color: var(--red-400);"><p style="color: var(--gray-100);">400</p></div>
                  <div style="background-color: var(--red-default);"><p style="color: var(--gray-100);">500</p></div>
                  <div style="background-color: var(--red-600);"><p style="color: var(--gray-100);">600</p></div>
                  <div style="background-color: var(--red-700);"><p style="color: var(--gray-100);">700</p></div>
                  <div style="background-color: var(--red-800);"><p style="color: var(--gray-100);">800</p></div>
                  <div style="background-color: var(--red-900);"><p style="color: var(--gray-100);">900</p></div>
              </section>
              <br><br><br><br>

              <h2> Semantic tokens </h2>
              <p>
                Explore available tokens currently applied.
              </p>

              <h4>Text Colors</h4>
              <section class="tokens">
                <div class="token-info-container">
                    <div>
                        <div style="background-color: var(--text-heading-on-light);" class="token-preview"></div>
                        <code class="token-name">text-heading-on-light</code>
                    </div>
                    <code>teal-800</code>
                </div>
                <div class="token-info-container">
                    <div>
                        <div style="background-color: var(--text-body-on-light);" class="token-preview"></div>
                        <code class="token-name">text-body-on-light</code>
                    </div>
                    <code>brown-600</code>
                </div>
                <div class="token-info-container">
                    <div>
                        <div style="background-color: var(--text-body-bold-on-light);" class="token-preview"></div>
                        <code class="token-name">text-body-bold-on-light</code>
                    </div>
                    <code>brown-900</code>
                </div>
                <div class="token-info-container">
                    <div>
                        <div style="background-color: var(--text-caption);" class="token-preview"></div>
                        <code class="token-name">text-caption</code>
                    </div>
                    <code>brown-500</code>
                </div>  
                <div class="token-info-container">
                    <div>
                        <div style="background-color: var(--text-body-muted);" class="token-preview"></div>
                        <code class="token-name">text-body-muted</code>
                    </div>
                    <code>brown-400</code>
                </div>
                <div class="token-info-container">
                    <div>
                        <div style="background-color: var(--text-unselected);" class="token-preview"></div>
                        <code class="token-name">text-unselected</code>
                    </div>
                    <code>brown-300</code>
                </div>
              </section>

              <h4>Fonts</h4>
              <section class="tokens">
                <div class="token-info-container">
                    <code class="token-name">font-display</code>
                    <code>Fraunces, ui-serif, Georgia, serif</code>
                </div>
                <div class="token-info-container">
                    <code class="token-name">font-body</code>
                    <code>gravity, Inter, system-ui, sans-serif</code>
                </div>
                <div class="token-info-container">
                    <code class="token-name">font-bold</code>
                    <code>gravity-bold</code>
                </div>
                <div class="token-info-container">
                    <code class="token-name">Font-family-h1</code>
                    <code>font-display</code>
                </div>
                <div class="token-info-container">
                    <code class="token-name">Font-family-h2</code>
                    <code>font-bold</code>
                </div>
                <div class="token-info-container">
                    <code class="token-name">Font-family-h3</code>
                    <code>font-bold</code>
                </div>
                <div class="token-info-container">
                    <code class="token-name">Font-family-h4</code>
                    <code>font-bold</code>
                </div>
                <div class="token-info-container">
                    <code class="token-name">Font-family-body</code>
                    <code>font-body</code>
                </div>
                <div class="token-info-container">
                    <code class="token-name">Font-weight-normal</code>
                    <code>Regular</code>
                </div>
                <div class="token-info-container">
                    <code class="token-name">Font-weight-bold</code>
                    <code>Bold</code>
                </div>
                <div class="token-info-container">
                    <code class="token-name">Font-family-italic</code>
                    <code>font-italic</code>
                </div>
                <div class="token-info-container">
                    <code class="token-name">Font-family-bold-italic</code>
                    <code>font-bold-italic</code>
                </div>
              </section>

              <h4>Border Radius</h4>
              <section class="tokens">
                <div class="token-info-container">
                    <div>
                        <div style="background-color: var(--surface-secondary); border-radius: var(--radius-none)" class="token-preview token-preview-large"></div>
                        <code class="token-name">radius-none</code>
                    </div>
                    <code>Scale-0 = 0px</code>
                </div>
                <div class="token-info-container">
                    <div>
                        <div style="background-color: var(--surface-secondary); border-radius: var(--radius-sm)" class="token-preview token-preview-large"></div>
                        <code class="token-name">radius-sm</code>
                    </div>
                    <code>Scale-200 = .5rem</code>
                </div>
                <div class="token-info-container">
                    <div>
                        <div style="background-color: var(--surface-secondary); border-radius: var(--radius-md)" class="token-preview token-preview-large"></div>
                        <code class="token-name">radius-md</code>
                    </div>
                    <code>Scale-250 = 0.625rem</code>
                </div>
                <div class="token-info-container">
                    <div>
                        <div style="background-color: var(--surface-secondary); border-radius: var(--radius-lg)" class="token-preview token-preview-large"></div>
                        <code class="token-name">radius-lg</code>
                    </div>
                    <code>Scale-default = 1rem</code>
                </div>
                <div class="token-info-container">
                    <div>
                        <div style="background-color: var(--surface-secondary); border-radius: var(--radius-pill)" class="token-preview token-preview-large"></div>
                        <code class="token-name">radius-pill</code>
                    </div>
                    <code>9999px</code>
                </div>
              </section>
        </div>
    </main>
</BaseLayout>

<link href="/fonts/gravity-regular.woff2" as="font" type="font/woff2" crossorigin>
<link href="/fonts/gravity-bold.woff2" as="font" type="font/woff2" crossorigin>

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Fraunces:ital,opsz,WONK@1,9..144,1&display=swap">
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Fraunces:ital,opsz,WONK@1,9..144,1&display=swap" media="print" onload="this.media='all'">
<noscript>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Fraunces:ital,opsz,WONK@1,9..144,1&display=swap">
</noscript>

<!-- ======================================= -->

<link rel="preload" href="/styles/general.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
<noscript><link rel="stylesheet" href="/styles/general.css"></noscript>

<link rel="preload" href="/styles/boilerplate.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
<noscript><link rel="stylesheet" href="/styles/boilerplate.css"></noscript>

<link rel="preload" href="/styles/design-system.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
<noscript><link rel="stylesheet" href="/styles/design-system.css"></noscript>

</html>
